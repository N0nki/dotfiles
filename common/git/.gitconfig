[include]
  # enter your name and email
  path = ~/.gitconfig.local
[core]
  editor = vim
  excludesfile = ~/.config/git/ignore
[init]
  defaultBranch = main
[alias]
  # create git worktree dir
  # usage: git wta {branch name}
  wta = "!f() { \
    b=\"$1\"; \
    d=$(printf '%s' \"$b\" | sed 's#/#-#g'); \
    prefix=\"${GIT_PREFIX%/}\"; \
    dest=\"$(pwd)/${prefix:+$prefix/}$d\"; \
    git worktree add \"$dest\" \"$b\"; \
  }; f"
