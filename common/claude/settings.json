{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(less:*)",
      "Bash(more:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(file:*)",
      "Bash(wc:*)",
      "Bash(stat:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebSearch"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*.crt)",
      "Read(**/*.cer)",
      "Read(**/*.p12)",
      "Read(**/*.pfx)",
      "Read(**/credentials*)",
      "Read(**/auth*)",
      "Read(**/token*)",
      "Read(.npmrc)",
      "Read(.pypirc)",
      "Read(.netrc)",
      "Read(~/.aws/**)",
      "Read(~/.gcp/**)",
      "Read(~/.azure/**)",
      "Read(~/.ssh/**)",
      "Read(**/*_rsa)",
      "Read(**/*_dsa)",
      "Read(**/*_ecdsa)",
      "Read(**/*_ed25519)",
      "Edit(.env)",
      "Edit(.env.*)",
      "Edit(**/.env)",
      "Edit(**/.env.*)",
      "Edit(**/*.pem)",
      "Edit(**/*.key)",
      "Edit(**/*.crt)",
      "Edit(**/*.cer)",
      "Edit(**/*.p12)",
      "Edit(**/*.pfx)",
      "Edit(**/credentials*)",
      "Edit(**/auth*)",
      "Edit(**/token*)",
      "Edit(.npmrc)",
      "Edit(.pypirc)",
      "Edit(.netrc)",
      "Edit(~/.aws/**)",
      "Edit(~/.gcp/**)",
      "Edit(~/.azure/**)",
      "Edit(~/.ssh/**)",
      "Edit(**/*_rsa)",
      "Edit(**/*_dsa)",
      "Edit(**/*_ecdsa)",
      "Edit(**/*_ed25519)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "/bin/bash ~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "example-skills@anthropic-agent-skills": true,
    "commit-commands@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true
  },
  "language": "japanese",
  "autoUpdatesChannel": "stable"
}
