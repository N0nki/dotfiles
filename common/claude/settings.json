{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "language": "japanese",
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(less:*)",
      "Bash(more:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(file:*)",
      "Bash(wc:*)",
      "Bash(stat:*)",
      "WebFetch(domain:github.com)",
      "WebSearch"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*.crt)",
      "Read(**/*.cer)",
      "Read(**/*.p12)",
      "Read(**/*.pfx)",
      "Read(**/credentials*)",
      "Read(**/auth*)",
      "Read(**/token*)",
      "Read(.npmrc)",
      "Read(.pypirc)",
      "Read(.netrc)",
      "Read(~/.aws/**)",
      "Read(~/.gcp/**)",
      "Read(~/.azure/**)",
      "Read(~/.ssh/**)",
      "Read(**/*_rsa)",
      "Read(**/*_dsa)",
      "Read(**/*_ecdsa)",
      "Read(**/*_ed25519)",
      "Edit(.env)",
      "Edit(.env.*)",
      "Edit(**/.env)",
      "Edit(**/.env.*)",
      "Edit(**/*.pem)",
      "Edit(**/*.key)",
      "Edit(**/*.crt)",
      "Edit(**/*.cer)",
      "Edit(**/*.p12)",
      "Edit(**/*.pfx)",
      "Edit(**/credentials*)",
      "Edit(**/auth*)",
      "Edit(**/token*)",
      "Edit(.npmrc)",
      "Edit(.pypirc)",
      "Edit(.netrc)",
      "Edit(~/.aws/**)",
      "Edit(~/.gcp/**)",
      "Edit(~/.azure/**)",
      "Edit(~/.ssh/**)",
      "Edit(**/*_rsa)",
      "Edit(**/*_dsa)",
      "Edit(**/*_ecdsa)",
      "Edit(**/*_ed25519)"
    ]
  }
}
